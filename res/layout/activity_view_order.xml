<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#153221"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deluxe.View_order" >
    <ScrollView 
          android:layout_width="match_parent"
    android:layout_height="match_parent"
        >
        <LinearLayout 
            android:orientation="vertical"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
            >
<ImageView
        android:layout_width="fill_parent"
        android:id="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
         />
<LinearLayout 
         android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/txvv"
       
        >
<TextView 
   
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:textSize="30dp"
    android:textStyle="bold"
    android:layout_height="wrap_content"
    android:text=""
    android:textColor="#ffffff"
    android:id="@+id/txv"
    />
</LinearLayout>
<LinearLayout 
        android:layout_below="@+id/txvv"
        android:background="@drawable/shap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/sh"
        >

    <LinearLayout 
        
        android:id="@+id/lin1"
        android:layout_marginTop="15px"
        android:layout_marginLeft="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Orderd Date : "
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:id="@+id/orddat"
           
            android:textStyle="bold"
            android:text=" "
            />
    </LinearLayout>
<LinearLayout 
        android:layout_below="@+id/lin1"
        android:id="@+id/lin2"
        android:paddingTop="20px"
         android:layout_marginTop="15px"
        android:layout_marginLeft="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Orderd By : "
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namm"
            android:textColor="#00FF00"
            android:textStyle="bold"
            android:text=" "
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_below="@+id/lin2"
        android:id="@+id/lin3"
        android:paddingTop="20px"
         android:layout_marginTop="15px"
        android:layout_marginLeft="15px"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Order Quantity : "
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ordq"
             android:textColor="#00FF00"
            android:textStyle="bold"
            android:text=" "
            />
    </LinearLayout>
     </LinearLayout>
    <LinearLayout 
        android:layout_below="@+id/sh"
        android:weightSum="1"
        android:paddingTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
        
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="accept"
            android:id="@+id/accept"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Accept Request "
            />
         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_weight="0.5"
           android:id="@+id/reject"
           android:onClick="reject"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Reject Request "
            />
    </LinearLayout>
   </LinearLayout>
        
        
    </ScrollView>
</RelativeLayout>
